<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the paths your FileProvider can share. -->
    <!-- Using cache-path for temporary images is common. -->
    <!-- The 'name' can be anything, the 'path' is relative to the directory type. -->
    <cache-path
        name="my_images"
        path="images/" />
    <external-files-path
        name="my_images"
        path="images/" />
</paths>